{
  "compilerOptions": {
    "module":          "commonjs",
    "target":          "es6",
    "esModuleInterop": true,
    "rootDir":         "src",
    "outDir":          "build",
    "sourceMap":       true,
    "strict":          true,
    "typeRoots":       [
      "node_modules/@types",
      "types/external"
    ],
    "noUnusedLocals":  true,
    "lib":             [
      "es6",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "include":         [
    "src/**/*"
  ],
  "exclude":         [
    "node_modules"
  ]
}
